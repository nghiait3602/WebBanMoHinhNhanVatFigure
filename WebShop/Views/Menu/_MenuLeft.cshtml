@model IEnumerable<WebShop.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <ul class="sidebar_categories">
            @if (ViewBag.CateId == item.Id)
            {
                <li class="active"><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>

            }
            else
            {
                <li><a href="/danh-muc-san-pham/@item.Alias-@item.Id">@item.Title</a></li>

            }

        </ul>
    }

}
