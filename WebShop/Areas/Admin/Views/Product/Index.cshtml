@model PagedList.IPagedList<WebShop.Models.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Product" class="nav-link">@ViewBag.Title</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>

}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý sẩn phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách @ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/Admin/Product/Add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="btnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <!--<div class="row">-->
            @*<div class="col-12">
                    @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { }))
                    {

                        <div class="input-group">
                          @Html.TextBox("SearchText", new {})
                             <input type="search" class="form-control form-control-lg" name="SearchText" id="SearchText" placeholder="Từ khóa tìm kiếm">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">
                                    <i class="fa fa-search">Tìm Kiếm</i>
                                </button>
                            </div>
                        </div>
                    }

                </div>*@
            <!--</div>-->
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Trang chủ</th>
                        <th>Khuyến mãi</th>
                        <th>Hiển thị</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;

                        foreach (var item in Model)
                        {
                            var strCheck = item.IsActive ? "<i class ='fa fa-check text-success'></i>" : "<i class ='fa fa-times text-danger'></i>";
                            var strCheckHome = item.IsHome ? "<i class ='fa fa-check text-success'></i>" : "<i class ='fa fa-times text-danger'></i>";
                            var strCheckSale = item.IsSale ? "<i class ='fa fa-check text-success'></i>" : "<i class ='fa fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" id="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td><img class="imgProduct" data-id="@item.Id" src="@item.ProductImage.FirstOrDefault(x=>x.IsDefault).Image" width="50" /></td>
                                <td>@item.Title</td>
                                <td>@item.ProductCategory.Title</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyy")</td>
                                <td class="text-center">
                                    <a href='#' data-id=@item.Id class="btnHome">@Html.Raw(strCheckHome)</a>
                                </td>
                                <td class="text-center">
                                    <a href='#' data-id=@item.Id class="btnSale">@Html.Raw(strCheckSale)</a>
                                </td>
                                <td class="text-center">
                                    <a href='#' data-id=@item.Id class="btnActive">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="/Admin/Product/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4"> Không có bàn ghi nào</td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-3"></div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<div id="dialog">
    <iframe id="myIframe" style="border:0; width:100%;height:100%;"></iframe>
</div>
<!-- Thông báo xóa (btnDelete) -->

@section scripts{
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            //hiển thị ảnh sản phẩm onclick
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: "600",
                width: "700",
                resizable: true,
                title: 'Quản lý ảnh sản phẩm',
                close: function () {
                    window.location.reload();
                }
            });
            $('body').on("click", ".imgProduct", function () {
                var proid = $(this).attr("data-id");
                $("#dialog #myIframe").attr("src", "/Admin/ProductImage/Index?id=" + proid);
                $('#dialog').dialog('open');
                return false;
            });

            $('body').on('click', '#btnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {

                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var id = $(this).val();
                        if (i == 0) {
                            str += id;
                        } else {
                            str += "," + id;
                        }
                        i++;
                    } else {
                        checkbox.attr('selected', '');

                    }
                });
                if (str.length > 0) {
                    var confi = confirm('Bạn có muôn xóa các bản ghi này không?');
                    if (confi == true) {
                        $.ajax({

                            url: '/Admin/Product/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }

            });
            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    } else {
                        checkbox.attr('selected', '');
                    }
                });
            });
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var confi = confirm("Bạn có muốn xóa bản ghi này không");
                if (confi == true) {
                    $.ajax({
                        url: '/Admin/Product/delete',
                        type: 'POST',
                        data: { id, id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });

            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = $(this).data("id");
                $.ajax({
                    url: '/Admin/Product/IsActive',
                    type: 'POST',
                    data: { id, id },
                    success: function (rs) {
                        debugger;
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class ='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fa fa-times text-danger'></i>");

                            }
                        }
                    }
                });

            });
            $('body').on('click', '.btnHome', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = $(this).data("id");
                $.ajax({
                    url: '/Admin/Product/IsHome',
                    type: 'POST',
                    data: { id, id },
                    success: function (rs) {
                        debugger;
                        if (rs.success) {
                            if (rs.isHome) {
                                btn.html("<i class ='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fa fa-times text-danger'></i>");

                            }
                        }
                    }
                });

            });
            $('body').on('click', '.btnSale', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = $(this).data("id");
                $.ajax({
                    url: '/Admin/Product/IsSale',
                    type: 'POST',
                    data: { id, id },
                    success: function (rs) {
                        debugger;
                        if (rs.success) {
                            if (rs.isSale) {
                                btn.html("<i class ='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fa fa-times text-danger'></i>");

                            }
                        }
                    }
                });

            });
        });
    </script>
}

